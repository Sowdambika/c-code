#include <stdio.h>

int main()
{
    int x[10],n,i,sum;
    double avg;
    printf("enter number of elements in array:");
    scanf("%d",&n);
    printf("enter x array of elements:");
        for(i=0;i<n;i++)
            scanf("%d",&x[i]);
               sum=0;
                    for(i=0;i<n;i++)
                        sum=sum+x[i];
                        avg=sum/n;
    printf("sum value is: %d\n",sum);
    printf("avg value is: %lf\n",avg);

    return 0;
}
