#include <stdio.h>

int main()
{
    short int x;
    printf("size of short int: %d\n",sizeof(short int));
    printf("size of integer: %d\n",sizeof(int));
    printf("size of char: %d\n",sizeof(char));
    printf("size of float: %d\n",sizeof(float));
    printf("size of double: %d\n",sizeof(double));
    return 0;
}
