#include <stdio.h>

int main()
{
    int n;
    double pi=3.14;
    double area,radius,length,breadth,height,base;
    
    printf("choices are:\n 1.Circle \n 2.Rectangle \n 3.Triangle \n ");
    printf("Enter your choice: \n");
    
    scanf("%d",&n);
    
    switch(n)
    {
        case 1:
        printf("enter radius:");
        scanf("%lf",&radius);
        area=pi*radius*radius;
        printf("area= %lf",area);
        break;
        
        case 2:
        printf("enter length:");
        scanf("%lf",&length);
         printf("enter breadth:");
        scanf("%lf",&breadth);
        area=length*breadth;
        printf("area= %lf",area);
        break;
        
        case 3:
        printf("enter base:");
        scanf("%lf",&base);
        printf("enter height:");
        scanf("%lf",&height);
        area=base*height;
        printf("area= %lf",area);
        break;
        

        default:
        printf("invalid number");
        
    }
    return 0;
}
