#include <stdio.h>

int main()
{
    int j,i,n;
    printf("enter n value:");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
            if(i+j==(n-1) || i-j==(n-3) || j-i==(n-3) || i+j==(n+3))
            printf(" * ");
            else
            printf("   ");
        }
        printf("\n");
    }
    return 0;
}
